<config>
    <global>
        
        <queue>
            <backend>beanstalkd</backend><!-- beanstalkd / amazonsqs -->
            
            <!-- beanstalkd specific config -->
            <beanstalkd>
                <servers>
                    <server>
                        <host>127.0.0.1</host>
                    </server>
                </servers>
            </beanstalkd>
            
            <!-- Amazon SQS specific config -->
            <amazonsqs>
                <connection>
                    <key></key>
                    <secret></secret>
                    <region></region>
                </connection>
            </amazonsqs>
        </queue>
        
    </global>

</config>
